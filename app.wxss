@import '/Resource/iconfont/iconfont.wxss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 70%;
  box-sizing: border-box;
  background-color:#f7f8fa;
} 

.tab-item {
  padding: 0 20rpx;
  text-align: center;
  padding-top: 10rpx;
}

.tab-img {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: auto;
}

.tab-bar {
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 100;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

